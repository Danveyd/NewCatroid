<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Этот чекбокс важен для стабильности, как вы и указали -->
    <CheckBox
        android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <!-- Указываем категорию Threed и размер Small, т.к. всего один параметр -->
    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_load_scene_layout"
        style="@style/BrickContainer.Threed.Small">

        <!-- Иконка категории -->
        <include layout="@layout/icon_brick_category_threed" />

        <!-- Название блока -->
        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_load_scene" />

        <!-- Подпись для поля ввода на новой строке -->
        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_load_scene_file"
            app:layout_newLine="true"/>

        <!-- Само поле для ввода имени файла -->
        <TextView
            android:id="@+id/brick_load_scene_edit_text"
            style="@style/BrickEditText" />

    </org.catrobat.catroid.ui.BrickLayout>
</LinearLayout>