<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_set_camera_rotation_layout"
        style="@style/BrickContainer.Threed.Medium">

        <include layout="@layout/icon_brick_category_threed" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_set_camera_rotation" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/brick_set_3d_rotation_yaw" app:layout_newLine="true"/>
        <TextView android:id="@+id/brick_set_camera_rotation_yaw" style="@style/BrickEditText" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/brick_set_3d_rotation_pitch" app:layout_newLine="true"/>
        <TextView android:id="@+id/brick_set_camera_rotation_pitch" style="@style/BrickEditText" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/brick_set_3d_rotation_roll" app:layout_newLine="true"/>
        <TextView android:id="@+id/brick_set_camera_rotation_roll" style="@style/BrickEditText" />

    </org.catrobat.catroid.ui.BrickLayout>
</LinearLayout>