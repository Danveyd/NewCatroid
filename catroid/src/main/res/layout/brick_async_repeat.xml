<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_async_repeat_layout"
        style="@style/BrickContainer.Control.Small">

        <include layout="@layout/icon_brick_category_control" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_async_repeat" />

        <TextView
            android:id="@+id/brick_async_repeat_edit_text"
            style="@style/BrickEditText" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/times_label_part_2" />
    </org.catrobat.catroid.ui.BrickLayout>
</LinearLayout>