<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_set_sound_volume_layout"
        style="@style/BrickContainer.Sound.Medium">

        <include layout="@layout/icon_brick_category_sound" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_set_sound_volume_text" />

        <Spinner
            android:id="@+id/brick_set_sound_volume_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            app:layout_newLine="true" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_set_sound_volume_volume"
            app:layout_newLine="true"/>

        <TextView
            android:id="@+id/brick_set_sound_volume_edit_text"
            style="@style/BrickEditText" />

    </org.catrobat.catroid.ui.BrickLayout>
</LinearLayout>