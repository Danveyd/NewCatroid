<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/brick_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        android:id="@+id/brick_square_layout"
        style="@style/BrickContainer.Look.Big">

        <include layout="@layout/icon_brick_category_look" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_square" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_square_name"
            app:layout_newLine="true"/>

        <TextView
            android:id="@+id/brick_square_edit_name"
            style="@style/BrickEditText" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_square_pos"
            app:layout_newLine="true"/>

        <TextView
            android:id="@+id/brick_square_edit_x"
            style="@style/BrickEditText" />

        <TextView
            android:id="@+id/brick_square_edit_y"
            style="@style/BrickEditText" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_square_size"
            app:layout_newLine="true"/>

        <TextView
            android:id="@+id/brick_square_edit_w"
            style="@style/BrickEditText" />

        <TextView
            android:id="@+id/brick_square_edit_h"
            style="@style/BrickEditText" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_square_color"
            app:layout_newLine="true"/>

        <TextView
            android:id="@+id/brick_square_edit_color"
            style="@style/BrickEditText" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_square_trans"
            app:layout_newLine="true"/>

        <TextView
            android:id="@+id/brick_square_edit_trans"
            style="@style/BrickEditText" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_square_rot"
            app:layout_newLine="true"/>

        <TextView
            android:id="@+id/brick_square_edit_rot"
            style="@style/BrickEditText" />

        <TextView
            style="@style/BrickText.SingleLine"
            android:text="@string/brick_square_borders"
            app:layout_newLine="true"/>

        <TextView
            android:id="@+id/brick_square_edit_borders"
            style="@style/BrickEditText" />
    </org.catrobat.catroid.ui.BrickLayout>

</LinearLayout>