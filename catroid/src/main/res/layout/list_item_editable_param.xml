<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="8dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/param_name_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColorHint="@color/pocketpaint_color_picker_gray"
        android:hint="@string/libs_nametype">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/param_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/solid_white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/param_value_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:textColorHint="@color/pocketpaint_color_picker_gray"
        android:hint="@string/libs_value">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/param_value_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/solid_white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/delete_param_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/libs_del_param"/>
</LinearLayout>