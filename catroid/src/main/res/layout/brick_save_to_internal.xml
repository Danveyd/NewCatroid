<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox android:id="@+id/brick_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="gone" />

    <org.catrobat.catroid.ui.BrickLayout
        style="@style/BrickContainer.Device.Medium">

        <include layout="@layout/icon_brick_category_device" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/brick_save_to_internal" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/project_file_name" app:layout_newLine="true"/>
        <TextView android:id="@+id/brick_save_to_internal_project_file" style="@style/BrickEditText" />

        <TextView style="@style/BrickText.SingleLine" android:text="@string/internal_storage_path" app:layout_newLine="true"/>
        <TextView android:id="@+id/brick_save_to_internal_path" style="@style/BrickEditText" />
    </org.catrobat.catroid.ui.BrickLayout>
</LinearLayout>