<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="#404040"
    android:gravity="center_vertical">

    <!-- Основной контент (поля ввода) -->
    <LinearLayout
        android:id="@+id/collider_content_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/collider_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Box Collider"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textColor="@android:color/white" />

        <!-- Center Offset -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center"
            android:layout_marginTop="8dp"
            android:textColor="#CCCCCC" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Поля X, Y, Z для Center -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="X" android:textColor="#CCCCCC"/>
            <EditText android:id="@+id/edit_collider_cx" style="@style/InspectorEditText" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:inputType="numberSigned|numberDecimal"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Y" android:textColor="#CCCCCC"/>
            <EditText android:id="@+id/edit_collider_cy" style="@style/InspectorEditText" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:inputType="numberSigned|numberDecimal"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Z" android:textColor="#CCCCCC"/>
            <EditText android:id="@+id/edit_collider_cz" style="@style/InspectorEditText" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:inputType="numberSigned|numberDecimal"/>
        </LinearLayout>

        <!-- Size (for Box/Capsule) -->
        <LinearLayout android:id="@+id/layout_collider_size" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Size" android:layout_marginTop="8dp" android:textColor="#CCCCCC" />
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <!-- Поля X, Y, Z для Size -->
                <TextView
                    android:id="@+id/label_collider_sx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="#CCCCCC"/>
                <EditText
                    android:id="@+id/edit_collider_sx"
                    style="@style/InspectorEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>

                <TextView
                    android:id="@+id/label_collider_sy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y"
                    android:textColor="#CCCCCC"/>
                <EditText
                    android:id="@+id/edit_collider_sy"
                    style="@style/InspectorEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>

                <TextView
                    android:id="@+id/label_collider_sz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z"
                    android:textColor="#CCCCCC"/>
                <EditText
                    android:id="@+id/edit_collider_sz"
                    style="@style/InspectorEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Radius (for Sphere/Capsule) -->
        <LinearLayout android:id="@+id/layout_collider_radius" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:visibility="gone">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Radius" android:layout_marginTop="8dp" android:textColor="#CCCCCC"/>
            <EditText android:id="@+id/edit_collider_radius" style="@style/InspectorEditText" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Панель с кнопками действий -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp">
        <ImageButton android:id="@+id/btn_duplicate_collider" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_input_add" app:tint="@android:color/white" android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton android:id="@+id/btn_delete_collider" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_delete" app:tint="#FF5252" android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
</LinearLayout>