<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editor.EditorActivity">

    <!-- 1. ОСНОВНОЙ КОНТЕНТ (СЦЕНА И ТУЛБАР) -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:id="@+id/camera_controls"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:columnCount="3"
                android:rowCount="2"
                android:orientation="horizontal"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.25"

                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp" >

                <!-- Кнопки остаются без изменений -->
                <Button android:id="@+id/btn_cam_q" android:layout_column="0" android:layout_row="0" android:text="Q" style="@style/Widget.App.Button.CameraControl"/>
                <Button android:id="@+id/btn_cam_w" android:layout_column="1" android:layout_row="0" android:text="W" style="@style/Widget.App.Button.CameraControl"/>
                <Button android:id="@+id/btn_cam_e" android:layout_column="2" android:layout_row="0" android:text="E" style="@style/Widget.App.Button.CameraControl"/>
                <Button android:id="@+id/btn_cam_a" android:layout_column="0" android:layout_row="1" android:text="A" style="@style/Widget.App.Button.CameraControl"/>
                <Button android:id="@+id/btn_cam_s" android:layout_column="1" android:layout_row="1" android:text="S" style="@style/Widget.App.Button.CameraControl"/>
                <Button android:id="@+id/btn_cam_d" android:layout_column="2" android:layout_row="1" android:text="D" style="@style/Widget.App.Button.CameraControl"/>
            </GridLayout>

            <Button
                android:id="@+id/btn_cam_shift"
                style="@style/Widget.App.Button.CameraControl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="SHIFT"
                app:layout_constraintBottom_toBottomOf="@id/camera_controls"
                app:layout_constraintStart_toEndOf="@id/camera_controls"
                app:layout_constraintTop_toTopOf="@id/camera_controls"
                app:layout_constraintWidth_percent="0.15" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:title="3D Editor"
                app:titleTextColor="@android:color/white"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- 2. ЛЕВАЯ ПАНЕЛЬ (ИЕРАРХИЯ) С ТЕМНОЙ ТЕМОЙ -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#303030"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hierarchy"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
        <ListView
            android:id="@+id/hierarchy_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/btn_add_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Empty" />

            <!--<Button
                android:id="@+id/btn_add_cube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Cube" />

            <Button
                android:id="@+id/btn_add_sphere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Sphere" />-->
        </LinearLayout>
    </LinearLayout>

    <!-- 3. ПРАВАЯ ПАНЕЛЬ (ИНСПЕКТОР) С ТЕМНОЙ ТЕМОЙ -->
    <LinearLayout
        android:id="@+id/right_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#303030"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:id="@+id/inspector_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inspector"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/inspector_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"/>
        </ScrollView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>